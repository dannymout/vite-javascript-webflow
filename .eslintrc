{
    "parser": "espree",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "import",
        "sort-imports-es6-autofix"
    ],
    "rules": {
        "indent": [
            1,
            4
        ],
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "sort-imports": "off"
    }
}